{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "db/*",
        "outDir": "dist"
      },
      {
        "include": "base.json",
        "outDir": "dist"
      },
      {
        "include": "conditions.json",
        "outDir": "dist"
      },
      {
        "include": "crops.json",
        "outDir": "dist"
      }
    ]
  }
}
